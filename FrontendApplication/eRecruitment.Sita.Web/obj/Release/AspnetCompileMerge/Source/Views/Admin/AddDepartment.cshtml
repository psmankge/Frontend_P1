@model eRecruitment.Sita.Web.Models.DepartmentModel
<section class="content-header">
    <h1>
        Administration
        @*Blank page*@
        @*<small>it all starts here</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Administration</a></li>
        <li class="active">Add Department</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Add Department</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">

            @using (Html.BeginForm("AddDepartment", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Organisation Name<span class="required" style="color:red;"> * </span></label>
                                @Html.DropDownListFor(Model => Model.OrganisationID, new SelectList(ViewBag.Organisation, "OrganisationID", "OrganisationName"), "--Select Organisation --", new { @class = "form-control", required = "Required", tabindex = 1 })
                            </div>
                        </div>
                   
                        @*<div class="form-group">
                            <div class="col-md-12">
                                <label>Department Name</label>
                                @Html.TextBoxFor(Model => Model.DepartmentName, new { @class = "form-control", placeholder = "Department Name", tabindex = 2 })
                            </div>
                        </div>*@  
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Organisational Department Name<span class="required" style="color:red;"> * </span></label>
                                @Html.TextBoxFor(Model => Model.DepartmentName, new { @class = "form-control", required = "Required", placeholder = "Department Name", tabindex = 2 })
                            </div>
                        </div> 
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Department Manager Name<span class="required" style="color:red;"> * </span></label>
                                @Html.DropDownListFor(Model => Model.ManagerID, new SelectList(ViewBag.ManagerList, "UserID", "ManagerName"), "--Select Departmental Manager --", new { @class = "form-control", required = "Required", tabindex = 3 })
                            </div>
                        </div>   
                        <div class="clearfix"></div><br />
                        <div class="col-md-12 pull-right">
                            <input type="submit" class="btn btn-success" value="Save" /> |
                            <a href="@Url.Action("DepartmentList", "Admin")" onclick="return confirm('Are you sure you want to cancel?')" type="button" class="btn btn-danger">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>

            }
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            &nbsp;
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
