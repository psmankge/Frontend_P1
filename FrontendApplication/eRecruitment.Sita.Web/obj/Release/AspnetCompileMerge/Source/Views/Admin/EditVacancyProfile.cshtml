@model IEnumerable<eRecruitment.Sita.Web.Models.VacancyProfileModels>
<section class="content-header">
    
        <h1>
            Administration
            @*<small>it all starts here</small>*@
        </h1>
    
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Admin</a></li>
        <li class="active">Edit Vacancy Profile</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Edit Vacancy Profile</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
@foreach (var item in Model)
{

            using (Html.BeginForm("EditVacancyProfile", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Vacancy Name<span class="required" style="color:red;"> * </span></label>
                                @Html.TextBoxFor(Model => @item.VacancyName, new { @class = "form-control", placeholder = "Vacancy Name", tabindex = 1 })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Organisation<span class="required" style="color:red;"> * </span></label>
                                @Html.DropDownListFor(Model => @item.OrganisationID, new SelectList(ViewBag.Organisation, "OrganisationID", "OrganisationName", @item.OrganisationID), "--Select Organisation Type--", new { @class = "form-control", required = "Required", tabindex = 3 })

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Purpose of the Job<span class="required" style="color:red;"> * </span></label>
                                @Html.TextAreaFor(Model => @item.VacancyPurpose, new { @class = "form-control", placeholder = "Purpose of the Job", required = "Required", tabindex = 15 })
                            </div>
                            <div class="col-md-12">
                                <label>Responsibilities<span class="required" style="color:red;"> * </span></label>
                                @Html.TextAreaFor(Model => @item.Responsibility, new { @class = "form-control", placeholder = "Responsibilities of the Job", required = "Required", tabindex = 16 })
                            </div>
                            <div class="col-md-12">
                                <label>Qualifications And Experience<span class="required" style="color:red;"> * </span></label>
                                @Html.TextAreaFor(Model => @item.QualificationsandExperience, new { @class = "form-control", placeholder = "Qualifications and Experience required for the Job", required = "Required", tabindex = 17 })
                            </div>
                            <div class="col-md-12">
                                <label>Technical Competencies Description<span class="required" style="color:red;"> * </span></label>
                                @Html.TextAreaFor(Model => @item.TechnicalCompetenciesDescription, new { @class = "form-control", placeholder = "Technical Competencies Description", required = "Required", tabindex = 18 })
                            </div>
                            <div class="col-md-12">
                                <label>Additional Requirements<span class="required" style="color:red;"> * </span></label>
                                @Html.TextAreaFor(Model => @item.OtherSpecialRequirements, new { @class = "form-control", placeholder = "Additional Requirements for the Job", required = "Required", tabindex = 19 })
                            </div>
                            <div class="col-md-12">
                                <label>Disclaimer<span class="required" style="color:red;"> * </span></label>
                                @Html.TextAreaFor(Model => @item.Disclaimer, new { @class = "form-control", placeholder = "Disclaimer", required = "Required", tabindex = 20 })
                            </div>
                        </div>
                        <div class="clearfix"></div><br />
                        <div class="col-md-12 pull-right">
                            <input type="submit" class="btn btn-success" value="Save" /> |

                            <a href="@Url.Action("VacancyProfileList", "Admin")" onclick="return confirm('Are you sure you want to cancel?')" type="button" class="btn btn-danger">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>

            }
}
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            &nbsp;
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
