@model eRecruitment.Sita.Web.Models.VacancyListModels
@{
    ViewBag.Title = "Index";
}
@using Microsoft.AspNet.Identity
<section class="content-header">
    <h1>
        Approved Vacancy List
        @*<small>&nbsp;</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Upload Vacancy</a></li>
        <li class="active">Approved Vacancies List</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" disabled class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="box">
                @*<div class="box-header">
                        <h3 class="box-title">Vacancies List</h3>
                    </div>*@
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                
                                <th>Reference #</th> 
                                <th>Job Title</th>
                                <th>Organisation</th>                                                  
                                <th>Employment Type</th>
                                <th>Status</th>
                                <th>Creation Date</th>
                                <th>Closing Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (@ViewBag.ApprovedVacancy != null)
                            {
                                foreach (var item in ViewBag.ApprovedVacancy)
                                {
                                    <tr>
                                       
                                        <td>@item.ReferenceNo</td> 
                                        <td>@item.JobTitle</td>
                                        <td>@item.Organisation</td>                                                                           
                                        <td>@item.EmploymentType</td>
                                        <td>@item.Status</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.ClosingDate</td>
                                        <td>
                                            <a href="@Url.Action("ViewForApproval", "Vacancy", new { id = @item.ID})"><span class="fa fa-send success" style="color:green"></span> View For Approval</a>

                                            @*<div class="btn-group">
                                                <button type="button" class="btn btn-success">Action</button>
                                                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                                                    <span class="caret"></span>
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li>
                                                        <a href="@Url.Action("ViewForApproval", "Vacancy", new { id = @item.ID})"><span class="fa fa-send success" style="color:green"></span> View For Approval</a>
                                                    </li>
                                                </ul>
                                            </div>*@
                                        </td>
                                    </tr>

                                }
                            }


                        </tbody>
                        @*<tfoot>
                                <tr>
                                    <th>Reference #</th>
                                    <th>Vacancy Name</th>
                                    <th>Job Title</th>
                                    <th>Employment Type</th>
                                    <th>Status</th>
                                    <th>Closing Date</th>
                                </tr>
                            </tfoot>*@
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            @*Footer*@
            &nbsp;
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
