@model  eRecruitment.Sita.Web.Models.VacancyModels
@using Microsoft.AspNet.Identity
@{
    /**/

    ViewBag.Title = "Declaration";
}
@using System.Data.Linq
@{
    eRecruitment.Sita.Web.App_Data.DAL.eRecruitmentDataClassesDataContext _db =
        new eRecruitment.Sita.Web.App_Data.DAL.eRecruitmentDataClassesDataContext();
}
<section class="content-header">
    <h1>
        &nbsp;
        @*Blank page*@
        @*<small>it all starts here</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Browse Jobs</a></li>
        <li class="active">View Vacancy</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3></h3>
            @*<h3 class="box-title">View Vacancy</h3>*@
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">

            @*====================Peter 20221210 - DECLARATION=============================*@
            <div class="card mt-2">
                <div class="card-header">
                    <h3>Declaration</h3>
                    <br/>
                    <td>
                        <a href="@Url.Action("DownloadCandidateProfile", "Vacancy", new { id = @HttpContext.Current.Session["sessUserID"].ToString()})"><span class="fa fa-eye" style="color:blue; font-size:medium; "></span> View My CV </a>
                    </td>
                </div>
                <div class="card-body">
                    <div class="form-group">

                        <div class="box-body">
                            <tbody>
                                <label>
                                    <input type="checkbox" id="chkDeclaration" onclick="Check()"
                                           name="chkDeclaration" /> I hereby declare that I have required qualifications, work experience, and skills , and that my profile meets the requirement of the advertised position.
                                </label>
                            </tbody>
                        </div>
                    </div>
                </div>
            </div>
            


            <div id="divJobQuestions" class="card mt-2" >
                <div class="card-header">
                    <h3>Job Specific Questions</h3>
                    <br />
                </div>
                <div class="card-body">
                    <div class="form-group" >

                        <div class="box-body">
                            <tbody>
                                
                                

                            </tbody>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            @*=============================================================================*@




        </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    &nbsp;
                </div>

</section>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

<script type="text/javascript">
    function Check() {
        var chkDeclare = document.getElementById("chkDeclaration");
        if (chkDeclare.checked) {
            $("#divJobQuestions").show();
        } else {
            $("#divJobQuestions").hide();
        }
    }
</script>